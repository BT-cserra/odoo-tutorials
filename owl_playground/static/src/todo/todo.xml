<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.Todo" owl="1">
        <p t-att-class="props.done ? 'text-muted text-decoration-line-through' : ''">
            <input type="checkbox" t-att-id="props.id" t-att-checked="props.done" t-on-click="onClick"/>
            <t t-esc="props.id"/> - <t t-esc="props.description"/> - <t t-esc="props.done"/>
            <span class="fa fa-remove" t-on-click="onRemove"/>
        </p>
    </t>

</templates>
